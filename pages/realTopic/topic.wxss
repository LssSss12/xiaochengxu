}
.collect{
	display: flex;
}
.collect .van-icon {
	margin-right: 8rpx;
}
.share{
	display: flex;
}
.share button{
	background-color: #fff !important;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0rpx 4rpx;
}
.share button:after{
	border:none;
}
