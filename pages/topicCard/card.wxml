<van-nav-bar
  title="交卷"
  left-arrow
	z-index="999"
	fixed
	safe-area-inset-top
	placeholder="true"
  bind:click-left="onClickLeft"
/>

<view class="topicCard" style="padding-top:{{navHeight}}px;">
	<view class="topicCard-title">单项选择题</view>
	<view class="card-part clear">
		<view class="card-list {{item.isAnswer === 1?'card-list-chk':''}}" wx:for="{{cards}}" wx:key="index" data-index="{{item.serialNumber}}" bindtap="topicDetail" wx:if="{{item.isMultipleChoice === 0&&item.titleType===0}}">{{item.serialNumber}}</view>
	</view>
	<view class="topicCard-title">多项选择题</view>
		<view class="card-part clear">
			<view class="card-list {{item.isAnswer === 1?'card-list-chk':''}}" wx:for="{{cards}}" wx:key="index" data-index="{{item.serialNumber}}" bindtap="topicDetail" wx:if="{{item.isMultipleChoice === 1&&item.titleType===0}}">{{item.serialNumber}}</view>
		</view>
		<!-- <view class="topicCard-title">案例选择题</view>
	<view class="card-part clear">
		<view class="card-list {{item.isAnswer === 1?'card-list-chk':''}}" wx:for="{{cards}}" wx:key="index" data-index="{{item.serialNumber}}" bindtap="topicDetail" wx:if="{{item.titleType === 1}}">{{item.serialNumber}}</view>
	</view>	 -->

	<view class="topicCard-title">案例分析题</view>
	<view class="card-part clear">
			<view class="card-list card-list-chk {{item.serialNumber.length >= 3?'card-list-more':''}}" wx:for="{{cards}}" wx:key="index" data-index="{{item.serialNumber}}" bindtap="topicDetail" wx:if="{{item.titleType === 2}}">{{item.serialNumber}}</view>
	</view>
	</view>
	


<view class="card-btn">
	<van-button type="primary" block bindtap="jiaojuan">交卷并查看结果</van-button>
</view>

<view class="ls-modal  {{modal?'show':''}}">
	<view class="ls-rdialog">
		<view class="ls-content">
			<view class="ls-message">{{answerMsg}}</view>
		</view>
		<view class="ls-footer">
			<view class="ls-footer-n ls-btn" bindtap="cancleJ">取消</view>
			<view class="ls-footer-y2 ls-btn" bindtap="confirmJ">确定</view>
		</view>
	</view>	
</view>
